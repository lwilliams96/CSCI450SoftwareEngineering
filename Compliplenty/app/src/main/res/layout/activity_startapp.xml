<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/icon_profile"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/profile"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/icon_contacts"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/icon_contacts"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/addressbook"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/icon_down"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:src="@drawable/tbox"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/icon_down"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="61dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon_profile" />

    <TextView
        android:id="@+id/main_compliment"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginBottom="168dp"
        android:layout_marginTop="169dp"
        android:text="Anything you set your mind to is within your grasp, you're just that good."
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_share"
        app:layout_constraintRight_toLeftOf="@+id/icon_contacts"
        app:layout_constraintTop_toTopOf="@+id/icon_contacts"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


    <Button
        android:id="@+id/icon_up"

        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/up"
        app:layout_constraintBaseline_toBaselineOf="@+id/icon_share"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.facebook.share.widget.ShareButton
        android:id="@+id/icon_share"

        android:layout_width="100dp"
        android:layout_height="50dp"

        android:text="SHARE"
        android:textColor="#FF59BD"
        android:textSize="15sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="150dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/icon_down"

        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_marginEnd="12dp"

        android:background="@drawable/down"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/icon_share"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/icon_question"

        android:layout_width="100dp"
        android:layout_height="50dp"

        android:text="Question"
        android:textColor="#FF59BD"
        android:textSize="15sp"
        android:layout_marginStart="91dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/icon_random"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/icon_random"

        android:layout_width="100dp"
        android:layout_height="50dp"

        android:text="Random"
        android:textColor="#FF59BD"
        android:textSize="15sp"
        android:layout_marginStart="11dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_share"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toRightOf="@+id/icon_question" />

</android.support.constraint.ConstraintLayout>